<% content_for :titulo, @product.name%>
<% meta_tag :description, @product.description %>
<% meta_tag :keywords, @product.name.split.join(',') %>


<div class="container">

  <div class="row">

    <div class="col-lg-9" style="margin-left:auto; margin-right:auto; width:auto">

      <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel" style="width: fit-content; margin-left:auto; margin-right:auto" >
        <div class="carousel-inner" role="listbox" style="margin-left:auto; margin-right:auto; width:fit-content">
          <div class="carousel-item active">
            <%= image_tag @product.photo.url(:medium), class:"d-block" , style:"height:300px;" %>
          </div>

          <div class="carousel-item">
            <% if @product.photo1.present? %>
              <%= image_tag @product.photo1.url(:medium),class:"d-block" , style:"height:300px;"%>

            <!-- <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide"> -->
          </div>
            <% end %>

            <div class="carousel-item">
              <% if @product.photo2.present? %>
                <%= image_tag @product.photo2.url(:medium),class:"d-block " , style:"height:300px;"%>

              <!-- <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide"> -->
            </div>
              <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="row">
        <h1 class="titulo"><%= @product.name %></h1><br>
      </div>
      <div class="row">
        <h1 class="precio">$<%= @product.price.round %></h1>
      </div>
      <div class="row">
        <% if current_user %>
        <%= link_to "Comprar Ya", "#{@product.link}", class:"carro" %>
        <% else %>
        <%= link_to "Comprar Ya", new_user_registration_path, class:"carro", onclick:"test" %>
        <% end %>
      </div>

    <% if current_user %>
    <% if current_user.admin? %>
    <li class="user"><h6><%= link_to "Eliminar",product_path(@product), :method => 'delete', data: {confirm: 'Seguro que desea eliminar el producto'} %>
       &nbsp&nbsp&nbsp <%= link_to "Editar", edit_product_path(@product) %></h6></li>
    <% end %>
    <% end %>
      <div class="row">
        <p class="descripcion"><%= @product.description %><br>Esta realizada con: <strong><%= @product.material.name %></strong></p>
      </div>
      </div>

    </div>

  </div>

</div>
